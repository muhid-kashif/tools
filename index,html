    <script>
        // Generate Random Email
        document.getElementById('generate-email').addEventListener('click', function() {
            const domains = ['ghostlymail.com', 'phantomail.net', 'spookbox.org'];
            const randomName = Math.random().toString(36).substring(2, 10);
            const email = `${randomName}@${domains[Math.floor(Math.random() * domains.length)]}`;
            
            const resultDiv = document.getElementById('email-result');
            resultDiv.innerHTML = `
                <strong>${email}</strong>
                <button class="copy-btn" onclick="copyToClipboard('${email}')">Copy</button>
            `;
            resultDiv.style.display = 'block';
        });

        // Generate Random Phone Number
        document.getElementById('generate-phone').addEventListener('click', function() {
            const countryCode = '+1';
            const randomNum = Math.floor(1000000000 + Math.random() * 9000000000).toString().substring(0, 10);
            const phoneNumber = `${countryCode} (${randomNum.substring(0, 3)}) ${randomNum.substring(3, 6)}-${randomNum.substring(6)}`;
            
            const resultDiv = document.getElementById('phone-result');
            resultDiv.innerHTML = `
                <strong>${phoneNumber}</strong>
                <button class="copy-btn" onclick="copyToClipboard('${phoneNumber}')">Copy</button>
            `;
            resultDiv.style.display = 'block';
        });

        // Generate Random Address
        document.getElementById('generate-address').addEventListener('click', function() {
            const streets = ['Shadow Lane', 'Phantom Blvd', 'Specter Ave', 'Haunt Rd'];
            const cities = ['Silent Hill', 'Ravenholm', 'Midnight City', 'Black Hollow'];
            const randomStreet = Math.floor(Math.random() * 1000) + ' ' + streets[Math.floor(Math.random() * streets.length)];
            const randomCity = cities[Math.floor(Math.random() * cities.length)];
            const randomZip = Math.floor(10000 + Math.random() * 90000);
            const address = `${randomStreet}, ${randomCity}, ${randomZip}`;
            
            const resultDiv = document.getElementById('address-result');
            resultDiv.innerHTML = `
                <strong>${address}</strong>
                <button class="copy-btn" onclick="copyToClipboard('${address}')">Copy</button>
            `;
            resultDiv.style.display = 'block';
        });

        // Copy to Clipboard
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text)
                .then(() => alert('Copied to clipboard!'))
                .catch(err => console.error('Failed to copy:', err));
        }
    </script>
